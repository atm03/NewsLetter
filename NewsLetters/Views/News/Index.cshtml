@model IEnumerable<News>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">NewsLetters</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="News" asp-action="Create" class="btn btn-primary">
                Add News.
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width-100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="30%">
                        @obj.Description
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="News" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                            <a asp-controller="News" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>